<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>
      <%= @repo_info.name %>
    </title>
  </head>
  <body>
    <h2>
      <%= @repo_info.name %>
      <% console %>
    </h2>
    <p>
      <%= @project.description %>
    </p>
    <%=link_to "Owner: " + @repo_info.owner["login"], @repo_info.owner["html_url"] %>
    <br>
    <%= link_to "Github Repo", @repo_info.html_url %>
    <br>
    <% if current_user == @project.user %>
    <%= link_to "Edit Project", edit_project_url %>
    <br>
    <%= link_to "Delete Project", project_url(@project), method: :delete %>
    <% end %>

    <div id="disqus_thread"></div>
<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'devine-3';
    var disqus_identifier = <% @repo_info.id %>;
    var disqus_url = 'https://devine-github.herokuapp.com/projects/';
	var disqus_config = function () {
	  this.language = "en";
	};
    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'https://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
    /* * * Disqus Reset Function * * */
    var reset = function (newUrl, newTitle, newLanguage) {
        DISQUS.reset({
            reload: true,
            config: function () {
                this.page.url = newUrl;
                this.page.title = newTitle;
                this.language = newLanguage;
            }
        });
    };
</script>




  </body>
</html>
